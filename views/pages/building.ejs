<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("head"); %>
    <link rel="stylesheet" href="css/building.css">
    <title><%= building.name %></title>
</head>

<body>
    
    <table class="container-fluid">
        <% if (images.length >= 1 && images.length != 2) { %>
            <tr class="row m-auto">
                <td class="col-12 cover main" id="building-crop-1">
                    <img src="images/Buildings/<%- cleanString(building.name) %>/<%- images[0] %>">
                </td>
            </tr>
        <% } %>
        <tr class="row m-auto">
            <% switch (images.length)
            {
                case 2: %>
                    <td class="col-6 cover main"><img src="images/Buildings/<%- cleanString(building.name) %>/<%- images[0] %>"></td>
                    <td class="col-6 cover main"><img src="images/Buildings/<%- cleanString(building.name) %>/<%- images[1] %>"></td>
                <% break;
                default:
                    for (var i = 1; i < images.length; i++)
                    { %>
                        <td class="col-<%= 12 / (images.length - 1) %> cover"><img
                                src="images/Buildings/<%- cleanString(building.name) %>/<%- images[i] %>"></td>
                    <% }
                    break;
            } %>
        </tr>
        <tr class="row m-auto">
            <td class="col-4 blue-box">
                <h4>Quick Facts</h4>
                <% if (locals.building.year) { %>
                    <h5>Built</h5>
                    <p><%= building.year %></p>
                <% }
                if (locals.building.roomTypes && locals.building.roomTypes[0])
                { %>
                    <h5>Rooms</h5>
                    <% building.roomTypes.forEach(room => { %>
                        <p><%= room %></p>
                    <% });
                }
                if (locals.building.majors && locals.building.majors[0])
                { %>
                    <h5>Primary Majors</h5>
                    <% building.majors.forEach(major => { %>
                        <p><%= major %></p>
                    <% });
                } %>
                <% if (locals.building.professors && locals.building.professors[0]) { %>
                    <h5>Professors in this building</h5>
                    <% building.professors.forEach(professor => { %>
                        <p><%= professor %></p>
                    <% })
                } %>
            </td>
            <td class="col-8">
                <h1 class="title"><%= building.name %></h1>
                <p>
                    <%= building.nameInfo %>
                </p>
            </td>
        </tr>

