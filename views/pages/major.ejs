<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("head"); %>
    <link rel="stylesheet" href="css/major.css">

    <title><%= major.id %></title>
</head>

<body>
    
    
    <table class="container-fluid p-0">

        <% if (locals.images) { %>
        <tr class="row m-auto">
            <td class="col-12 carousel">
                <%
                    images.forEach((image) => {
                    %>
                        <div class="slides">
                            <img src="images/Majors/<%- major.id %>/<%- image %>" style="width:100%">
                        </div>
                    <%
                }); %>
                
                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
            </td>
        </tr>
        <% } %>
        <tr class="row m-auto">
            <td class="col-4 blue-box">
                <h4>Quick Facts</h4>
                <% if (locals.major.campuses) { %> 
                    <h5>Offered At</h5>
                    <% major.campuses.forEach((campus) => 
                    { %> 
                        <p>
                            <%= campus %>
                        </p> 
                    <% }); 
                }%>
                <% if (locals.major.quick_facts) {
                    for (var fact in major.quick_facts[0])
                    { %>
                      <h5><%= fact %></h5>
                      <%
                      major.quick_facts[0][fact].forEach((item) => { %>
                        <p><%= item %></p>
                        <% }) 
                    }
                } %>
            </td>
            <td class="col-8">
                <div class="row">
                    <div class="col-12">
                        <h2 class="center"><%= major.id %></h2>
                        <h3 class="center">- 
                        <% major.type.forEach((type) =>
                        { %>
                            <%= type %> 
                            <%
                            if (type != major.type[major.type.length - 1])
                            { %>
                                <%= "&" %>
                            <% }
                        }); %> 
                        -</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <% major.about.forEach((paragraph) => 
                        { %> 
                            <p> 
                                <%= paragraph %>
                            </p> 
                        <% }); %>
                    </div>
                </div>
            </td>
        </tr>
    </table>

    
    <%- include("nav", {current: "major_select" }) %>
<%- include("tail"); %>

<script src="js/major.js"></script>
</body>
</html>
